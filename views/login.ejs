<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</head>
<body>
  <section class="section is-medium">
    <% if (err_msg?.length) { %>
      <div class="columns is-centered" id="error-msg">
        <div class="column is-two-fifths notification is-danger is-light has-text-centered">
          <button class="delete"></button>
          <%= err_msg %>
        </div>
      </div>
    <% } %>
    <br>
    <div class="columns is-centered">
      <div class="column is-two-fifths box px-5 py-6">
        <h2 class="title is-2">Login</h2>
        <form action="/api/login" method="POST">
          <div class="field">
            <label class="label">Email</label>
            <div class="control">
              <input required class="input" type="email" name="email" placeholder="Email">
            </div>
          </div>
          <div class="field">
            <label class="label">Password</label>
            <div class="control">
              <input required class="input" type="password" name="password" placeholder="Password">
            </div>
          </div>
          <button type="submit" class="button is-link">Login</button>
        </form>
        <a class="has-text-centered has-text-link is-underlined" href="/register">Don't have an account? Sign in.</a>
      </div>
    </div>
  </section>
</body>
</html>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const delErrMsg = () => {
      const errorMsg = document.querySelector("#error-msg").remove();

      if (errorMsg) {
        errorMsg.remove;
      }
    };

    const deleteButton = document.querySelector(".delete");

    if (deleteButton) {
      deleteButton.addEventListener("click", delErrMsg);
    }
  });
</script>